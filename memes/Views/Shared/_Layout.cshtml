                <div class="text-center b-1">
                    <h5><i>do things</i></h5>
                    <a asp-action="New" class="btn btn-primary">post img</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                @RenderBody()
            </div>
            <div class="col-md-3 col-sm-12">
                @await Component.InvokeAsync("PopularTags")
            </div>
        </div>
    </div>
</body>
</html>
