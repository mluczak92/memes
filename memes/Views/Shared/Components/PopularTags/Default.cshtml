@model TopTagVm[]

@{
    Layout = null;
}

<div class="text-center">
    <h5><u>top tags</u></h5>
    <ul class="list-group list-group-flush">
        @for (int i = 0; i < Model.Count(); i++) {
            <li class="list-group-item d-flex justify-content-between align-items-center @(Model[i].Value == ViewBag.CurrentTag ? "bg-white" : "bg-light")">
                <a asp-controller="Posts" asp-action="Index" asp-route-tag="@Model[i].Value">@Model[i].Value</a>
                <span class="badge @(i <= 2 ? "badge-primary" : i <= 9 ? "badge-info" : "badge-secondary") badge-pill">@Model[i].Count</span>
            </li>
        }
    </ul>
</div>

