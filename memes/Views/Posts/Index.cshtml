@model IEnumerable<Post>

<div>
    <a asp-action="New" class="btn btn-primary">post meme</a>
</div>

@foreach (Post post in Model) {
    <div class="card mt-2">
        @if (post.ImageName != null) {
            <img class="card-img-top" src="~/uploads/@Url.Content(post.ImageName)" />
        }
        <div class="card-body">
            <h5 class="card-title">@post.Title</h5>
            <p class="card-text">@post.Description</p>
        </div>
    </div>
}
