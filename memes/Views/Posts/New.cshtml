@model memes.Models.Post

<div>
    <form asp-action="New" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title"><b>at least 5 chars title:</b></label>
            <div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <input asp-for="Title" class="form-control" minlength="5" maxlength="50" required />
        </div>
        <div class="form-group">
            <label asp-for="Image"><b>at most 1mb .jp(e)g image:</b></label>
            <div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <input asp-for="Image" type="file" class="form-control-file" accept=".jpg, .jpeg" required />
        </div>
        <div class="form-group">
            <label asp-for="Description">description:</label>
            <div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <textarea asp-for="Description" class="form-control" rows="3" maxlength="200"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="TagsString">tags (space separated letters/digits only):</label>
            <div>
                <span asp-validation-for="TagsString" class="text-danger"></span>
            </div>
            <textarea asp-for="TagsString" class="form-control" rows="1" maxlength="200"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">post</button>
        </div>
    </form>
</div>
